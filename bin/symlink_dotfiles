#!/usr/bin/env bash
dotdir="$( cd "$( dirname "${BASH_SOURCE[0]}" )/../" && pwd )"
file_names=('.bashrc' '.bash_profile' '.gitconfig' '.gitignore' '.vimrc' '.gvimrc' '.zshrc' '.zprofile' '.irbrc' '.tmux.conf')
for file_name in ${file_names[@]}
do
  home_path=$HOME/$file_name
  dot_path=$dotdir/$file_name
  if [ -a $home_path ]
  then
    echo "$home_path already exists!"
  else
    ln -sv $dot_path $home_path
  fi
done

if [ -a $HOME/.oh-my-zsh ]
then
  echo "$HOME/.oh-my-zsh already exists!"
else
  ln -sv $dotdir/vendor/.oh-my-zsh $HOME/.oh-my-zsh
fi

rm -fv $dotdir/.vim/bundle/tomorrow-theme
ln -sv $dotdir/vendor/tomorrow-theme/vim $dotdir/.vim/bundle/tomorrow-theme

touch $dotdir/.private
